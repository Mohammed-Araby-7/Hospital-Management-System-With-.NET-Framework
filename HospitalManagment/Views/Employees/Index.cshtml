@model List<Employee>
@{
    Layout = null;
    ViewData["Title"] = "قائمة الموظفين";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-4">

    <!-- العنوان -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">قائمة الموظفين</h2>

        <a asp-controller="Employees" asp-action="Create" class="btn btn-success px-4">إضافة موظف جديد</a>
    </div>

    <!-- الجدول في Card -->
    <div class="card shadow-lg rounded-4">

        <div class="card-body p-0">

            <table class="table table-hover mb-0 align-middle text-center">

                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>الرقم القومي</th>
                        <th>الاسم</th>
                        <th>المرتب</th>
                        <th>الوظيفة</th>
                        <th>نوع الدوام</th>
                    </tr>
                </thead>

                <tbody>

                    @if (Model.Any())
                    {
                        foreach (var emp in Model)
                        {
                            <tr>
                                <td>@emp.Id</td>
                                <td>@emp.Ssn</td>
                                <td class="fw-semibold">@emp.Name</td>
                                <td class="text-success fw-bold">@emp.Salary</td>
                                <td>@emp.JobTitle</td>
                                <td>
                                    @if (emp.WorkType == "FullTime")
                                    {
                                        <span class="badge bg-primary">دوام كامل</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">دوام جزئي</span>
                                    }
                                </td>

                                <td>
                                    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@emp.Id" class="badge bg-success">تعديل </a>
                                </td>

                                <td>
                                    <a asp-controller="Employees" asp-action="Delete" asp-route-id="@emp.Id" class="badge bg-danger">حذف </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="py-4 text-muted">لا يوجد موظفين</td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>

    </div>

</div>
