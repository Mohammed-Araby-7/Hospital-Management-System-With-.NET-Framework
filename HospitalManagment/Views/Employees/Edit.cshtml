@model Employee
@{
    Layout = null;
    ViewData["Title"] = "تعديل بيانات موظف";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5" style="max-width: 650px;">

    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0 text-center">تعديل بيانات موظف</h3>
        </div>

        <div class="card-body px-4 py-4">

            <form asp-action="Edit" method="post">
 
                    <input  type="hidden" asp-for="Id" class="form-control rounded-3" />
                

                <div class="mb-3">
                    <label asp-for="Ssn" class="form-label fw-semibold"></label>
                    <input asp-for="Ssn" class="form-control rounded-3" />
                    <span asp-validation-for="Ssn" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label fw-semibold"></label>
                    <input asp-for="Salary" class="form-control rounded-3" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JobTitle" class="form-label fw-semibold"></label>
                    <input asp-for="JobTitle" class="form-control rounded-3" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WorkType" class="form-label fw-semibold"></label>
                    <select asp-for="WorkType" class="form-select rounded-3">
                        <option value="">اختر نوع الدوام</option>
                        <option value="FullTime">دوام كامل</option>
                        <option value="PartTime">دوام جزئي</option>
                    </select>
                    <span asp-validation-for="WorkType" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">
                    حفظ الموظف
                </button>

            </form>

        </div>

    </div>

</div>
