@model List<HospitalManagment.Models.Appoinitment>

@{
    Layout = null;
    ViewData["Title"] = "قائمة المواعيد";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="mb-4">قائمة المواعيد</h2>
    <a asp-action="Create" class="btn btn-success mb-3">إضافة موعد جديد</a>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>التاريخ</th>
                <th>الطبيب</th>
                <th>المريض</th>
                <th>العيادة</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@app.Doctor?.Name</td>
                    <td>@app.Patient?.Name</td>
                    <td>@app.Clinic?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@app.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
