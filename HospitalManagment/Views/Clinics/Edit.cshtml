@model HospitalManagment.Models.Clinic

@{
    Layout = null;
    ViewData["Title"] = "تعديل بيانات العيادة";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0 text-center">تعديل بيانات العيادة</h3>
        </div>
        <div class="card-body px-4 py-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">تحديث</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
