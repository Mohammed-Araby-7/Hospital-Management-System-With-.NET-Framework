@model List<HospitalManagment.Models.Clinic>

@{
    Layout = null;
    ViewData["Title"] = "عرض العيادات";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="mb-4">قائمة العيادات</h2>
    <a asp-action="Create" class="btn btn-success mb-3">إضافة عيادة جديدة</a>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>الاسم</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clinic in Model)
            {
                <tr>
                    <td>@clinic.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@clinic.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@clinic.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
