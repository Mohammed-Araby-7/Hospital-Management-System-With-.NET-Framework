@model HospitalManagment.Models.Perciption

@{
    Layout = null;
    ViewData["Title"] = "إضافة وصفة طبية جديدة";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5" style="max-width: 650px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0 text-center">إضافة وصفة طبية جديدة</h3>
        </div>
        <div class="card-body px-4 py-4">
            <form asp-action="Create" method="post">
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    <label asp-for="MedicaneName" class="form-label fw-semibold"></label>
                    <input asp-for="MedicaneName" class="form-control rounded-3" />
                    <span asp-validation-for="MedicaneName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dosage" class="form-label fw-semibold"></label>
                    <input asp-for="Dosage" class="form-control rounded-3" />
                    <span asp-validation-for="Dosage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-semibold"></label>
                    <input asp-for="Date" class="form-control rounded-3" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-semibold"></label>
                    <input asp-for="Phone" class="form-control rounded-3" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PatientId" class="form-label fw-semibold"></label>
                    <select asp-for="PatientId" class="form-select rounded-3" asp-items="ViewBag.Patients">
                        <option value="">اختر المريض</option>
                    </select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DoctorId" class="form-label fw-semibold"></label>
                    <select asp-for="DoctorId" class="form-select rounded-3" asp-items="ViewBag.Doctors">
                        <option value="">اختر الطبيب</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">
                    حفظ الوصفة
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
