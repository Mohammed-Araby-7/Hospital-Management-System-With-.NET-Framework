@model List<HospitalManagment.Models.Perciption>

@{
    Layout = null;
    ViewData["Title"] = "قائمة الوصفات الطبية";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="mb-4">قائمة الوصفات الطبية</h2>
    <a asp-action="Create" class="btn btn-success mb-3">إضافة وصفة جديدة</a>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>الدواء</th>
                <th>الجرعة</th>
                <th>تاريخ الوصفة</th>
                <th>رقم المريض</th>
                <th>اسم المريض</th>
                <th>الطبيب</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MedicaneName</td>
                    <td>@item.Dosage</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.PatientId</td>
                    <td>@item.Patient?.Name</td>
                    <td>@item.Doctor?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
