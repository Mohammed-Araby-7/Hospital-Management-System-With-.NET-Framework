@model List<Patient>

@{
    Layout = null;
    ViewData["Title"] = "عرض المرضى";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="mb-4">قائمة المرضى</h2>
    <a asp-action="Create" class="btn btn-success mb-3">إضافة مريض جديد</a>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>الاسم</th>
                <th>تاريخ الميلاد</th>
                <th>المرض</th>
                <th>رقم الهاتف</th>
                <th>الدكتور</th>
                @* <th>العيادة</th> *@
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.Name</td>
                    <td>@patient.Birthdate.ToString("yyyy-MM-dd")</td>
                    <td>@patient.Disease</td>
                    <td>@patient.Phone</td>
                    <td>@patient.Doctor?.Name</td>   <!-- اسم الدكتور -->
                    @* <td>@patient.Doctor?.Clinic?.Name</td> <!-- اسم العيادة --> *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
