@model List<Doctor>

@{
    Layout = null;
    ViewData["Title"] = "عرض الدكاترة";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
    <h2 class="mb-4">قائمة الأطباء</h2>
    <a asp-action="Create" class="btn btn-success mb-3">إضافة طبيب جديد</a>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>الاسم</th>
                <th>التخصص</th>
                <th>رقم الهاتف</th>
                <th>العيادة</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Name</td>
                    <td>@doc.Speciality</td>
                    <td>@doc.Phone</td>
                    <td>@doc.Clinic?.Name</td>  <!-- HERE -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@doc.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@doc.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
